<div class="mb-5">
  <h4>Search</h4>
  <form action="search" class="mt-3">
    <div class="form-group">
      <input type="search" name="q" id="q" class="form-control" placeholder="Search article...">
    </div>
  </form>
</div>

<div class="row">
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4>Categories</h4>
      <ul class="list-unstyled">
        <% @categoriesMenu.each do |category| %>
          <li>
            <a href="/category/<%= category.slug %>">
              <%= category.category %> (<%= category.articles.count %>)
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4>Archive</h4>
      <ul class="list-unstyled">
        <% @archivesMenu.each do |archive| %>
            <li>
              <a href="/archive/<%= archive.year %>/<%= archive.month %>">
                <%= archive.month_name %> <%= archive.year %>
              </a>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>