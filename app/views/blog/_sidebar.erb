<div class="mb-5">
  <h4><%= t(:label_search) %></h4>
  <form action="/<%= I18n.default_locale %>/search" class="mt-3">
    <div class="form-group">
      <input type="search" name="q" id="q" value="<%= params[:q] %>" class="form-control" placeholder="Search article...">
    </div>
  </form>
</div>

<div class="row">
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4><%= t(:menu_categories) %></h4>
      <ul class="list-unstyled">
        <% @categoriesMenu.each do |category| %>
          <li>
            <a href="<%= url_for(controller: 'blog', action: 'category', slug: category.slug) %>">
              <%= category.category %> (<%= category.articles.count %>)
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4><%= t(:label_archive) %></h4>
      <ul class="list-unstyled">
        <% @archivesMenu.each do |archive| %>
            <li>
              <a href="<%= url_for(controller: 'blog', action: 'archive', year: archive.year, month: archive.month) %>">
                <%= t('date.month_names')[archive.month.to_i-1] %> <%= archive.year %>
              </a>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>