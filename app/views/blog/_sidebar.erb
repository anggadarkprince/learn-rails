<div class="mb-5">
  <h4>Search</h4>
  <form action="search" class="mt-3">
    <div class="form-group">
      <input type="search" name="q" id="q" class="form-control" placeholder="Search article...">
    </div>
  </form>
</div>

<div class="row">
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4>Categories</h4>
      <ul class="list-unstyled">
        <% @categoriesMenu.each do |category| %>
          <li>
            <a href="/category/<%= category.id %>">
              <%= category.category %> (<%= category.articles.count %>)
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-6 col-lg-12">
    <div class="mb-5">
      <h4>Archive</h4>
      <ul class="list-unstyled">
        <li><a href="#">September 2017</a></li>
        <li><a href="#">August 2017</a></li>
        <li><a href="#">July 2017</a></li>
        <li><a href="#">June 2017</a></li>
        <li><a href="#">May 2017</a></li>
      </ul>
    </div>
  </div>
</div>