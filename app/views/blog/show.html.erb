<% content_for :title do %> - Homepage
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-9">

      <div class="pr-xl-4">
        <ol class="breadcrumb pl-0 bg-transparent">
          <li class="breadcrumb-item"><a href="/">Articles</a></li>
          <li class="breadcrumb-item">
            <a href="/category/<%= @article.category.slug %>">
              <%= @article.category.category %>
            </a>
          </li>
          <li class="breadcrumb-item active"><%= @article.title %></li>
        </ol>

        <h3><%= @article.title %></h3>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= @article.created_at.strftime('%B %d, %Y %I:%M %p') %>
          </li>
          <li class="list-inline-item">
            Posted By <a href="/author/<%= @article.user.username %>"><%= @article.user.name %></a>
          </li>
          <li class="list-inline-item">
            <%= @article.comments.where('comment_id IS NULL').count %> Comments
          </li>
        </ul>
        <div>
          <%= raw @article.content %>
        </div>

        <div class="lead mb-5">
          <% @article.tags.each do |tag| %>
              <a href="/tag/<%= tag.slug %>" class="badge badge-pill badge-primary">#<%= tag.tag %></a>
          <% end %>
        </div>

        <h4 class="mb-4 mt-5">Author</h4>
        <div class="card">
          <div class="card-body">
            <div class="d-block d-sm-flex text-center text-sm-left">
              <img class="mr-sm-3 mb-3 mb-sm-0" style="width: 90px; height: 90px;"
                   src="/assets/avatars/<%= @article.user.avatar %>"
                   data-holder-rendered="true">
              <div>
                <p class="lead mb-3 mb-md-1">
                  <strong><%= @article.user.name %></strong>
                  <small class="text-muted">@<%= @article.user.username %></small>
                </p>
                <p class="d-md-block" hidden>
                  <%= @article.user.about %>
                </p>
                <a class="btn btn-primary" href="<%= url_for(controller: 'author', action: 'profile', username: @article.user.username) %>" role="button">View Profile</a>
              </div>
            </div>
          </div>
        </div>

        <h4 class="mb-4 mt-5">Comments</h4>
        <%= render 'comments/form' %>

        <div class="mb-5 mt-5">
          <%= render @article.comments.where('comment_id IS NULL').order(created_at: :desc) %>
        </div>
      </div>

    </div>
    <div class="col-lg-3 d-md-block" hidden>
      <%= render 'sidebar' %>
    </div>
  </div>
</div>