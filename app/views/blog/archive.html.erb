<% content_for :title do %> - Archive <%= I18n.t("date.month_names")[@month.to_i] %>, <%= @year %>
<% end %>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-5">
      Archive:
      <%= I18n.t("date.month_names")[@month.to_i] %>,
      <%= @year %>
    </h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 col-lg-9">
      <div class="pr-xl-4">

        <%= render partial: 'article', collection: @articles %>

        <%= paginate @articles %>

      </div>
    </div>
    <div class="col-lg-3 d-md-block" hidden>
      <%= render 'sidebar' %>
    </div>
  </div>
</div>