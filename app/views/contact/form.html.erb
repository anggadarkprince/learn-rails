<% content_for :title do %> - Contact Us
<% end %>

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-lg-10 ml-auto mr-auto">
      <ol class="breadcrumb pl-0 bg-transparent">
        <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
        <li class="breadcrumb-item">About</li>
        <li class="breadcrumb-item active">Contact</li>
      </ol>

      <h3>Contact Us</h3>
      <% if flash[:notice] %>
          <div class="alert alert-primary" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:notice] %>
          </div>
      <% end %>
      <%= form_for :contact, url: 'contact/create' do |form| %>
          <div class="row">
            <div class="col col-sm-6">
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: 'form-control', placeholder: 'Your full name' %>
              </div>
            </div>
            <div class="col col-sm-6">
              <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email, class: 'form-control', placeholder: 'Email address' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= form.label :subject %>
            <%= form.text_field :subject, class: 'form-control', placeholder: 'Subject of your message' %>
          </div>
          <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: 'form-control', placeholder: 'Your message', rows: 5 %>
          </div>
          <div class="form-group">
            <%= submit_tag('Submit', {class: 'btn btn-primary btn-lg'}) %>
          </div>
      <% end %>
    </div>
  </div>

</div>
