<% content_for :title do %> - Register
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-5 col-sm-6 ml-auto mr-auto">
      <%= form_for @user, url: {controller: 'auth', action: 'login'}, html: {class: 'mb-5', id: 'login'} do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="text-center mb-3">
              <h5 class="card-title text-center mb-2">Sign In</h5>
              <p class="card-subtitle text-muted">Login to your control panel</p>
            </div>
            <hr>
            <% if flash[:alert] %>
                <div class="alert alert-<%= flash[:alert] %>" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <%= flash[:notice] %>
                </div>
            <% end %>
            <div class="form-group">
              <div class="form-group">
                <%= form.label :username %>
                <%= form.text_field :username, class: "form-control#{@user.errors[:username].any? ? ' is-invalid' : ''}", placeholder: 'Your user ID or email' %>
                <% if @user.errors[:username].any? %>
                    <span class="form-text invalid-feedback"><%= @user.errors[:username][0] %></span>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control#{@user.errors[:password].any? ? ' is-invalid' : ''}", placeholder: 'Your password' %>
              <% if @user.errors[:password].any? %>
                  <span class="form-text invalid-feedback"><%= @user.errors[:password][0] %></span>
              <% end %>
            </div>
          </div>
          <div class="card-footer">
            <%= submit_tag('Sign In Now', {class: 'btn btn-block btn-primary'}) %>
            <p class="text-center mt-3 mb-1">Don't have an account?
              <a href="<%= url_for(controller: 'auth', action: 'register') %>">Register</a> now
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% content_for :footer_fixed do %> fixed-bottom
<% end %>
